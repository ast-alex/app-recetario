doctype html
html
  head
    title Detalle de Paciente
  body
    h1 Detalle de Paciente
    p Nombre: #{paciente.nombre}
    p Apellido: #{paciente.apellido}
    p DNI: #{paciente.dni}
    p Fecha de Nacimiento: #{paciente.fecha_nacimiento}
    p Sexo: #{paciente.sexo}
    a(href=`/pacientes/edit/${paciente.id_paciente}`) Editar
    form(action=`/pacientes/${paciente.id_paciente}?_method=DELETE`, method='POST')
      button(type='submit') Eliminar
    br
    a(href=`/prescripciones/new/${paciente.id_paciente}`) Prescribir
    button.btn.btn-secondary(type='button' style='margin-top: 10px;' onclick="window.location.href='/pacientes'") Volver a la lista de pacientes
