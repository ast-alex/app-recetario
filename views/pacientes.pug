doctype html
html
  head
    title Lista de Pacientes
  body
    h1 Lista de Pacientes
    a(href='/pacientes/new') Nuevo Paciente

    // Campo de b√∫squeda por DNI
    form(action='/pacientes', method='GET')
      input(type='text', name='dni', placeholder='Buscar por DNI')
      button(type='submit') Buscar

    table
      thead
        tr
          th Nombre
          th Apellido
          th DNI
          th Fecha de Nacimiento
          th Sexo
          th Acciones
      tbody
        each paciente in pacientes
          tr
            td #{paciente.nombre}
            td #{paciente.apellido}
            td #{paciente.dni}
            td #{paciente.fecha_nacimiento}
            td #{paciente.sexo}
            td
              a(href=`/pacientes/${paciente.id_paciente}`) Ver
              |  |
              // Enlace para prescribir
              a(href=`/prescripciones/new/${paciente.id_paciente}`) Prescribir
              |  |
              // Enlace para editar
              a(href=`/pacientes/edit/${paciente.id_paciente}`) Editar
              |  |
              // Formulario para eliminar
              form(action=`/pacientes/${paciente.id_paciente}?_method=DELETE`, method='POST')
                button(type='submit') Eliminar
    br
